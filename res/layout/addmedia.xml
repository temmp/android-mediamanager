<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:orientation="vertical" >
				
	<LinearLayout   android:layout_width="fill_parent"
	             	android:layout_height="fill_parent"
	             	android:padding="10px"
	             	android:orientation="vertical">
	
		<TextView 	android:text="@string/tvAddMedia"	
					android:textStyle="bold"			
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:layout_gravity="center"
					android:paddingTop="10px" 
					android:paddingBottom="10px" android:gravity="center"/>
		
		<TextView 	android:text="@string/tvBarcode"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" />
	
		<EditText 	android:id="@+id/etBarcode" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"  
					android:inputType="number|numberDecimal" />
	
		<TextView 	android:text="@string/tvTitle" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:paddingTop="10px" />
	
		<EditText 	android:id="@+id/etTitle" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" />
	
		<TextView 	android:text="@string/tvAuthor" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:paddingTop="10px" />
	
		<EditText 	android:id="@+id/etAuthor" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:singleLine="true" />
	
		<TextView 	android:text="@string/tvMediatype" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:paddingTop="10px" />
	
		<Spinner 	android:id="@+id/spMediatype" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" />
					
		<LinearLayout   android:layout_width="fill_parent"
			         	android:layout_height="fill_parent"
			            android:orientation="vertical" 
			            android:paddingTop="20px" >
	             	
			<Button 	android:id="@+id/btSave" 
						android:text="@string/btSave"				
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" />	
						
		</LinearLayout>			
	</LinearLayout>
</ScrollView>