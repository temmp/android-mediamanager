<?xml version="1.0" encoding="UTF-8"?>
<ScrollView	xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:orientation="vertical" >
				
	<LinearLayout 	android:layout_width="fill_parent"
	             	android:layout_height="fill_parent"
	             	android:padding="10px"
	             	android:orientation="vertical">             
	
		<TextView 	android:text="@string/tvLendmedia" 
					android:id="@+id/tvLendmedia" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:layout_gravity="center" 
					android:textStyle="bold"
					android:paddingTop="10px" 
					android:paddingBottom="10px" android:gravity="center"/>
	
		<TextView 	android:text="@string/tvMedia" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" />
	
		<Spinner 	android:id="@+id/spMedia" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:prompt="@string/spMedia" />
	
		<TextView 	android:text="@string/tvLendto" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:paddingTop="10px" />
					
		<Spinner 	android:id="@+id/spLendto" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:prompt="@string/spLendto" />
	
		<TextView 	android:text="@string/tvLendtime" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:paddingTop="10px" />
	
		<DatePicker android:id="@+id/dpLendtime" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:paddingBottom="10px" />
	
		<Button 	android:text="@string/btLendmedia" 
					android:id="@+id/btLendmedia" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" />	
	</LinearLayout>
</ScrollView>
